<%= image_tag("twitter.png", :alt => "TwitterImage", :class=>"Img") %>

<h1>Listing tweets...</h1>

<table class="MsgTable">
  <thead>
    <tr>
      <th>Body</th>
      <th>Stars</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td class="tableLongTxt"><%= link_to tweet.body, tweet %></td>
        <td class="tableShortTxt"><%= tweet.stars %></td>
        <td class="tableLinkBtn"><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td class="tableLinkBtn"><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tweet', new_tweet_path %>
